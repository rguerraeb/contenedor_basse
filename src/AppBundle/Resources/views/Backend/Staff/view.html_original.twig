    <section class="content-header">
        <h1>Empleado</h1>
        <ol class="breadcrumb">
            <li>
                <a href="{{ path('backend_main') }}">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li>
                <a href="{{ path('backend_staff') }}">
                    Empleados
                </a>
            </li>
            <li class="active">Ver</li>
        </ol>
    </section>
    <section class="content" id="main-content-panel">
