{% extends '@App/Backend/base.html.twig' %}

{% block title %}
    LoyaltyV2 | Backend | Empleado
{% endblock %}

{% block extra_css %}
    <link rel="stylesheet"
        href="{{ asset('css/backend/loading_animation.css') }}">
    <link rel="stylesheet"
